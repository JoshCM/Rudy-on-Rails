<v:CanvasUserControl x:Class="RoRClient.Views.Game.GameSquareUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:local="clr-namespace:RoRClient.Views.Game"
                     xmlns:v="clr-namespace:RoRClient.Views"
                     x:Name="gameSquareUserControl"
                     mc:Ignorable="d" 
                     d:DesignHeight="300" d:DesignWidth="300"
                     Canvas.Top="{Binding RealY, ElementName=gameSquareUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=gameSquareUserControl}">
    <Canvas Width="{Binding SquareDim, ElementName=gameSquareUserControl}"
            Height="{Binding SquareDim, ElementName=gameSquareUserControl}">

        <Rectangle
            Width="{Binding SquareDim, ElementName=gameSquareUserControl}"
            Height="{Binding SquareDim, ElementName=gameSquareUserControl}"
            Fill="HotPink"
            Stroke="WHITE"
            StrokeThickness="1">
        </Rectangle>
    </Canvas>
</v:CanvasUserControl>
