<v:CanvasUserControl x:Class="RoRClient.Views.Game.CoalGameUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:v="clr-namespace:RoRClient.Views"
                     x:Name="coalUserControl"
                     mc:Ignorable="d" 
                     d:DesignHeight="300" d:DesignWidth="300"
                     Canvas.Top="{Binding RealY, ElementName=coalUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=coalUserControl}">

    <Canvas Width="{Binding SquareDim, ElementName=coalUserControl}"
            Height="{Binding SquareDim, ElementName=coalUserControl}">
        <Image Width="{Binding SquareDim, ElementName=coalUserControl}" 
               Height="{Binding SquareDim, ElementName=coalUserControl}" 
               Source="/RoRClient;component/Resources/Images/container_coal.png" Stretch="Fill">
        </Image>
    </Canvas>
</v:CanvasUserControl>