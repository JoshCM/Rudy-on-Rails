<UserControl x:Class="RoRClient.Views.Game.GameStatusUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             x:Name="gameStatusUserControl"
             d:DesignHeight="20" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal" >
        <Label Content="{Binding CoalCount, ElementName=gameStatusUserControl}" FontSize="6" Margin="5,0" MinWidth="50" Width="79" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" />
