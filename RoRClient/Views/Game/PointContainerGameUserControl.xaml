<v:CanvasUserControl x:Class="RoRClient.Views.Game.PointContainerGameUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:v="clr-namespace:RoRClient.Views"
                     x:Name="pointContainerUserControl"
                     mc:Ignorable="d" 
                     d:DesignHeight="300" d:DesignWidth="300"
                     Canvas.Top="{Binding RealY, ElementName=pointContainerUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=pointContainerUserControl}">

    <Canvas Width="{Binding ViewConstants.SquareDim}"
            Height="{Binding ViewConstants.SquareDim}">
        <Image Width="{Binding ViewConstants.SquareDim}" 
               Height="{Binding ViewConstants.SquareDim}" 
               Source="/RoRClient;component/Resources/Images/container_points.png" Stretch="Fill">
        </Image>
    </Canvas>
</v:CanvasUserControl>