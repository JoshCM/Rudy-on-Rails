<UserControl x:Class="RoRClient.Views.Game.TrainSpeedGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <StackPanel >
        <Label Content="Geschwindigkeit" FontSize="8" Height="20" FontWeight="Bold" HorizontalAlignment="Center" />
        <Slider Minimum="-5" Maximum="+5" IsSnapToTickEnabled="True" TickFrequency="1" HorizontalContentAlignment="Center"  ValueChanged="SliderValueChanged"/>

    </StackPanel>
</UserControl>
