<UserControl x:Class="RoRClient.Views.Game.GameInteractionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500" BorderBrush="Black" >


    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Geisterzug" Margin="2"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Sensoren" Margin="2"/>
        <Button Grid.Column="2" Grid.Row="0" Content="Tausch" Margin="2" />


        <ComboBox Grid.Row="1" Grid.ColumnSpan="3" Margin="2" >
            <ComboBoxItem>Skript 1</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Skript 2</ComboBoxItem>
            <ComboBoxItem>Skript 3</ComboBoxItem>
        </ComboBox>

        <TextBox Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Height="45" Margin="2" />
        <Button Grid.Column="2" Grid.Row="2" Content="Speichern" Margin="1,2,1,1" Background="#FF171515" BorderBrush="#FF171515" Foreground="White"  />
        <Button Grid.Column="2" Grid.Row="3" Content="Auswählen" Margin="1,1,1,2" Background="#FF171515" BorderBrush="#FF171515" Foreground="White"/>

    </Grid>
</UserControl>
