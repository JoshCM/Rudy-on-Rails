<UserControl x:Class="RoRClient.Views.Game.GameInteractionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="AntiqueWhite">
    <Grid>
        <Grid x:Name="ContentGrid" Margin="10" RenderTransformOrigin="0.52,0.362">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>



            <Button Grid.Column="0" Grid.Row="0" Content="Geisterzug" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
            <Button Grid.Column="1" Grid.Row="0" Content="Sensoren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
            <Button Grid.Column="2" Grid.Row="0" Content="Tausch" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>


            <ComboBox Grid.Row="1" Grid.ColumnSpan="3" Margin="5">
                <ComboBoxItem>Skript 1</ComboBoxItem>
                <ComboBoxItem IsSelected="True">Skript 2</ComboBoxItem>
                <ComboBoxItem>Skript 3</ComboBoxItem>
            </ComboBox>

            <TextBox Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="2" HorizontalAlignment="Left" Height="45" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="187" Margin="0,0,0,-1" />
            <Button Grid.Column="2" Grid.Row="3" Content="Speichern" Margin="0,0,-14,0" />
            <Button Grid.Column="2" Grid.Row="4" Content="Auswählen" Margin="0,0,-14,1" />




        </Grid>





    </Grid>
</UserControl>
