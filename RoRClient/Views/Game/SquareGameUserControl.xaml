<v:CanvasUserControl x:Class="RoRClient.Views.Game.SquareGameUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:local="clr-namespace:RoRClient.Views.Game"
                     xmlns:v="clr-namespace:RoRClient.Views"
                     x:Name="squareUserControl"
                     mc:Ignorable="d" 
                     d:DesignHeight="300" d:DesignWidth="300"
                     Canvas.Top="{Binding RealY, ElementName=squareUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=squareUserControl}">
    <Canvas Width="{Binding SquareDim, ElementName=squareUserControl}"
            Height="{Binding SquareDim, ElementName=squareUserControl}">

        <Image Width="{Binding SquareDim, ElementName=squareUserControl}" 
               Height="{Binding SquareDim, ElementName=squareUserControl}" 
               Source="/RoRClient;component/Resources/Images/gras.jpg" Stretch="Fill" >
        </Image>
    </Canvas>
</v:CanvasUserControl>
