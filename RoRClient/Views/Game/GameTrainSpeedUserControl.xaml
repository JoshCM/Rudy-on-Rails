<UserControl x:Class="RoRClient.Views.Game.GameTrainSpeedUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" Background="AntiqueWhite">
    <StackPanel VerticalAlignment="Center">
        <Label Content="Geschwindigkeit" HorizontalContentAlignment="Center" FontSize="10" VerticalContentAlignment="Stretch" Padding="5,5,5,10" UseLayoutRounding="False" MinHeight="30" />
        <Slider Minimum="0"
        Maximum="100"
        IsSnapToTickEnabled="True"
        TickFrequency="1" HorizontalContentAlignment="Center"  Value="50" FontSize="10" RenderTransformOrigin="0.501,2.206"/>

    </StackPanel>
</UserControl>
