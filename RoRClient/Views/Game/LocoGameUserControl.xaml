<v:CanvasUserControl x:Class="RoRClient.Views.Game.LocoGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:v="clr-namespace:RoRClient.Views"
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             x:Name="locoUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>

    </UserControl.Resources>
    <Canvas Width="{Binding SquareDim, ElementName=locoGameUserControl}"
            Height="{Binding SquareDim, ElementName=locoGameUserControl}">
        <Image Width="290" 
               Height="290" 
               Source="/RoRClient;component/Resources/Images/loco.png" Stretch="Fill">
        </Image>
    </Canvas>
</v:CanvasUserControl>
