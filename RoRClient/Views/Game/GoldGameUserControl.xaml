<v:CanvasUserControl x:Class="RoRClient.Views.Game.GoldGameUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:v="clr-namespace:RoRClient.Views"
                     x:Name="goldUserControl"
                     mc:Ignorable="d" 
                     d:DesignHeight="300" d:DesignWidth="300"
                     Canvas.Top="{Binding RealY, ElementName=goldUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=goldUserControl}">

    <Canvas Width="{Binding SquareDim, ElementName=goldUserControl}"
            Height="{Binding SquareDim, ElementName=goldUserControl}">
        <Image Width="{Binding SquareDim, ElementName=goldUserControl}" 
               Height="{Binding SquareDim, ElementName=goldUserControl}" 
               Source="/RoRClient;component/Resources/Images/container_gold.png" Stretch="Fill">
        </Image>
    </Canvas>
</v:CanvasUserControl>