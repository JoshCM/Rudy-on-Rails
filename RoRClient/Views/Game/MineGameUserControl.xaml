<v:CanvasUserControl x:Class="RoRClient.Views.Game.MineGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:RoRClient.Views"
             x:Name="mineUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Canvas.Top="{Binding RealY, ElementName=mineUserControl}"
             Canvas.Left="{Binding RealX, ElementName=mineUserControl}">
    <Canvas Width="{Binding SquareDim, ElementName=mineUserControl}"
            Height="{Binding SquareDim, ElementName=mineUserControl}">
        <Image Width="{Binding SquareDim, ElementName=mineUserControl}" 
               Height="{Binding SquareDim, ElementName=mineUserControl}" 
                Source="/RoRClient;component/Resources/Images/mine.png" Stretch="Fill">
        </Image>
    </Canvas>
 </v:CanvasUserControl>
