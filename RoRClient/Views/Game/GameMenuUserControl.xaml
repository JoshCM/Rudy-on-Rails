<UserControl x:Class="RoRClient.Views.Game.GameMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="LightBlue">
    <Grid x:Name="ContentGridMenu">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>


        <game:GameMiniMapUserControl Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="1"/>

        <game:GameInteractionUserControl Grid.Row="0"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="1"/>


        <game:GameTrainSpeedUserControl Grid.Row="0"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="1"/>
    </Grid>
</UserControl>
