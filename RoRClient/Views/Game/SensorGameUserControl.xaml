<UserControl x:Class="RoRClient.Views.Game.SensorGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <StackPanel>
        <Label Content="Sensor" FontSize="8" Height="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <Image Width="50" 
               Height="50" 
               Source="/RoRClient;component/Resources/Images/sensor.png" Stretch="Fill"
                   HorizontalAlignment="Center">
            <Image.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding SelectSensor}">
                </MouseBinding>
            </Image.InputBindings>
        </Image>
    </StackPanel>
</UserControl>
