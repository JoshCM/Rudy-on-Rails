<v:CanvasUserControl x:Class="RoRClient.Views.Game.SensorGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:RoRClient.Views"
             xmlns:converter="clr-namespace:RoRClient.BindingConverter"
             x:Name="sensorUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Canvas.Top="{Binding RealY, ElementName=sensorUserControl}"
             Canvas.Left="{Binding RealX, ElementName=sensorUserControl}">
    <Canvas Width="{Binding SquareDim, ElementName=sensorUserControl}"
            Height="{Binding SquareDim, ElementName=sensorUserControl}">
        <Image Width="{Binding SquareDim, ElementName=sensorUserControl}" 
               Height="{Binding SquareDim, ElementName=sensorUserControl}" 
                Source="/RoRClient;component/Resources/Images/sensor.png" Stretch="Fill">
        </Image>
    </Canvas>
</v:CanvasUserControl>
