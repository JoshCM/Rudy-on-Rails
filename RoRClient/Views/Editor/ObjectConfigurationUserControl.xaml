<UserControl x:Class="RoRClient.Views.Editor.ObjectConfigurationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoRClient.Views.Editor"
             xmlns:vme="clr-namespace:RoRClient.ViewModels.Editor.ObjectConfiguration"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             Background="MintCream" BorderBrush="#FF510404" BorderThickness="6">
    <UserControl.Resources>
        <DataTemplate x:Name="RailTemplate" DataType="{x:Type vme:RailConfigurationViewModel}">
            <local:RailConfigurationUserControl DataContext="{Binding}"/>
        </DataTemplate>
    </UserControl.Resources>

    <StackPanel>
        <ContentControl Content="{Binding SelectedConfigurationViewModel}"/>
    </StackPanel>
</UserControl>
