<UserControl x:Class="RoRClient.Views.Editor.TopMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cmd="clr-namespace:RoRClient.ViewModels.Commands"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             Height="auto"
             Width="auto"
             d:DesignWidth="1920"
             Background="Aquamarine">
    <Menu IsMainMenu="True">
        <MenuItem Header="_File" >
            <MenuItem Header="_New..." />
            <Separator />
            <MenuItem Header="_Open..." />
            <Separator />
            <MenuItem Header="_Save" Command="{Binding SaveMapCommand}"/>
            <MenuItem Header="_Save As..." Command="{Binding SaveNewMapCommand}"/>
            <Separator />
            <MenuItem Header="_Exit" Command="{Binding LeaveEditorCommand}" />
        </MenuItem>
        <MenuItem Header="_Edit" />
        <MenuItem Header="_View" />
        <MenuItem Header="_Window" />
        <MenuItem Header="_Help" />
        <MenuItem Header="_Hier könnte Ihre Werbung stehen" />
    </Menu>
</UserControl>
