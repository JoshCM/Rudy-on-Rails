<v:CanvasUserControl x:Class="RoRClient.Views.Editor.TrainstationUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:v="clr-namespace:RoRClient.Views"
                     x:Name="trainstationUserControl"
                     mc:Ignorable="d" 
                     Canvas.Top="{Binding RealY, ElementName=trainstationUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=trainstationUserControl}">
    <Canvas Width="{Binding SquareDim, ElementName=trainstationUserControl}"
            Height="{Binding SquareDim, ElementName=trainstationUserControl}">
        <Image Width="{Binding SquareDim, ElementName=trainstationUserControl}" Height="{Binding SquareDim, ElementName=trainstationUserControl}" Source="pack://application:,,,/Resources/Images/Tools/trainstation.png">
            <Image.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding SelectInteractiveGameObjectCommand}"></MouseBinding>
            </Image.InputBindings>
        </Image>
    </Canvas>
</v:CanvasUserControl>
