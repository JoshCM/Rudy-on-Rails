<Window x:Class="RoRClient.Views.Popup.AskUserForStringPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoRClient.Views.Popup"
        x:Name="thisPopup"
        mc:Ignorable="d"
        Title="AskUserForStringPopup" Height="150" Width="300">
    <DockPanel Margin="15" >
        <TextBlock Text="{Binding Message, Mode=TwoWay, ElementName=thisPopup}" Padding="5" DockPanel.Dock="Top"/>
        <TextBox x:Name="ResponseTextBox" Text="{Binding InputText, Mode=TwoWay, ElementName=thisPopup}" DockPanel.Dock="Top"/>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Content="Speichern" Click="OkButton_Click"/>
            <Button Content="Abbrechen" Click="CancelButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
