<local:CanvasUserControl x:Class="RoRClient.View.RailUserControl"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:RoRClient.View"
                         x:Name="railUserControl"
                         mc:Ignorable="d" 
                         Canvas.Top="{Binding RealY, ElementName=railUserControl}"
                         Canvas.Left="{Binding RealX, ElementName=railUserControl}">
    <Canvas Width="20"
            Height="20">

        <Rectangle
            Width="20"
            Height="20"
            Fill="Green"
            Stroke="WHITE"
            StrokeThickness="1" />
    </Canvas>
</local:CanvasUserControl>
