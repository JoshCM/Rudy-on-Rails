<local:CanvasUserControl x:Class="RoRClient.View.Editor.SquareUserControl"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:local="clr-namespace:RoRClient.View"
                     mc:Ignorable="d" 
                     x:Name="squareUserControl"
                     xmlns:vm="clr-namespace:RoRClient.ViewModel"
                     xmlns:m="clr-namespace:RoRClient.Model.Models"
                     Canvas.Top="{Binding RealY, ElementName=squareUserControl}"
                     Canvas.Left="{Binding RealX, ElementName=squareUserControl}"
                     >

    <Canvas Width="{Binding SquareDim, ElementName=squareUserControl}"
            Height="{Binding SquareDim, ElementName=squareUserControl}">

        <Rectangle
            Width="{Binding SquareDim, ElementName=squareUserControl}"
            Height="{Binding SquareDim, ElementName=squareUserControl}"
            Fill="BROWN"
            Stroke="WHITE"
            StrokeThickness="1"
            MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"/>
    </Canvas>
</local:CanvasUserControl>
